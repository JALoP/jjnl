<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.tresys.jalop.jnl</groupId>
  <artifactId>parent</artifactId>
  <packaging>pom</packaging>
  <version>0.1.3</version> 
  <name>Java JALoP Network Library Parent Project</name>
  <url>http://maven.apache.org</url>
  <properties>
    <third.party.root>${user.home}/jalop-3rdparty</third.party.root>
    <beepcore.version>0.9.12</beepcore.version>
    <oswego.concurrent.version>1.3.4</oswego.concurrent.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <issueManagement>
    <system>FogBugz</system>
    <url>https://fogbugz.columbia.tresys.com</url>
  </issueManagement>
  <organization>
    <name>Tresys Technology</name>
  </organization>
  <scm>
    <url>scm:git:git@github.com:jalop-tresys/jjnl.git</url>
    <connection>scm:git:git@github.com:jalop-tresys/jjnl.git</connection>
    <developerConnection>scm:git:ssh://aftbuild/home/pblack/jjnl</developerConnection>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <compilerVersion>1.6</compilerVersion>
          <source>1.6</source>
          <target>1.6</target>
          <compilerArguments>
            <Xlint/>
            <Werror/>
          </compilerArguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.googlecode.jmockit</groupId>
      <artifactId>jmockit-coverage</artifactId>
      <version>0.999.15</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1.1</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.16</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>12.0</version>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.8.1</version>
      </plugin>
    </plugins>
  </reporting>
  <modules>
    <module>../jnl_lib</module>
    <module>../jnl_test</module>
  </modules>
</project>

